<Window x:Class="WPFGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" Background="{x:Null}">
    <Window.Resources>
        <SolidColorBrush x:Key="MenuForeground1" Color="#FF212121"/>
    </Window.Resources>

    <Canvas x:Name="Canvas">
        <TextBlock x:Name="WorldScreenButton" TextWrapping="Wrap" Text="World" Foreground="#FFA8A547" Width="128" Height="197" TextAlignment="Center" Panel.ZIndex="36" Canvas.Left="34" Canvas.Top="356" Background="Black" FontFamily="Bahnschrift" MouseEnter="MouseEnterMenuRectangle" MouseLeave="MouseLeaveMenuRectangle" MouseDown="MouseDownMenuRectangle" MouseUp="MouseUpMenuRectangle" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock x:Name="MapButton" TextWrapping="Wrap" Text="Map" Foreground="#A8A776" Width="288" Height="108" TextAlignment="Center" Panel.ZIndex="36" Canvas.Left="227" Canvas.Top="356" Background="Black" FontFamily="Bahnschrift" MouseEnter="MouseEnterMenuRectangle" MouseLeave="MouseLeaveMenuRectangle" MouseDown="MouseDownMenuRectangle" MouseUp="MouseUpMenuRectangle" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Image x:Name="ImageImage" Height="50" Width="50" Canvas.Left="158" Canvas.Top="118">
            <Image.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Image.OpacityMask>
        </Image>
        <Canvas x:Name="MainCanvas" Height="1064" Width="1920">
            <Image x:Name="GridImage" Height="32" Width="32" Canvas.Left="1841" Canvas.Top="1008" OpacityMask="Red"/>
        </Canvas>


    </Canvas>

</Window>
